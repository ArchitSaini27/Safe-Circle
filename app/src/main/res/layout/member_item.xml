<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_member_item"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_memberItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="360dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="@id/card_member_item"
        app:layout_constraintStart_toStartOf="@id/card_member_item"
        app:layout_constraintTop_toTopOf="@id/card_member_item">

        <ImageView
            android:id="@+id/image_memberItem"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="8dp"
            tools:src="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_name_member_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/card_image_memberItem"
        app:layout_constraintTop_toTopOf="@id/card_image_memberItem"
        tools:text="My Name" />

    <TextView
        android:id="@+id/text_desc_member_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/card_member_item"
        app:layout_constraintStart_toEndOf="@id/card_image_memberItem"
        app:layout_constraintTop_toBottomOf="@id/text_name_member_item"
        tools:text="Entering a very long text. Entering a very long text. Entering a very long text." />

</androidx.constraintlayout.widget.ConstraintLayout>